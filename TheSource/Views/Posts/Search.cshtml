<h4>Search The Source</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult">
            <div class="form-group">
                <i>Enter keyword of title or body of a post</i>
                <label for="SearchTerm" class="control-label"></label>
                <input name="SearchTerm" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search Posts" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
